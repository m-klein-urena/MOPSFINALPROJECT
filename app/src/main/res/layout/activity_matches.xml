<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_main"/>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingHorizontal="@dimen/screenPaddingHorizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginVertical="@dimen/headerMarginVertical"
            android:paddingHorizontal="@dimen/screenPaddingHorizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/queryHeaderMatches"
                android:layout_width="match_parent"
                android:layout_height="@dimen/groupHeight"
                android:layout_marginVertical="@dimen/stdMarginVertical"
                android:paddingHorizontal="@dimen/stdPaddingHorizontal"
                android:theme="@style/textGroup"/>

        </LinearLayout>

        <ScrollView
            android:id="@+id/queryResultMatches"
            android:layout_width="@dimen/queryBoxWidth"
            android:layout_height="@dimen/queryBoxHeight"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/stdMarginVertical"
            android:isScrollContainer="true"
            android:keepScreenOn="true">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/matchesName"
                    android:textColor="#FF00FF"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/matchesTeam"
                    android:textColor="#FF00FF"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/matchesContact"
                    android:textColor="#FF00FF"
                    android:textSize="15sp" />

            </LinearLayout>

                <ListView
                    android:id="@+id/listMatches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </ListView>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btnGoBackMatchView"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="@dimen/stdMarginVertical"
            android:theme="@style/btnStandard"
            android:background="@drawable/button"
            android:text="@string/btnBack"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>